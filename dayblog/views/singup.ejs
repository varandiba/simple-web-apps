<% include partials/header.ejs %>

<% if(regitryError && regitryError.length > 0) { %>
    <div class="alert alert-danger" role="alert"><%= regitryError %></div>
<% } %>

<div class="w-25 m-auto">
    <form action="/singup" method="post">
        <div class="form-group">
            <label for="username">Username: </label>
            <input class="form-control" id="username" placeholder="Username" type="text" name="username">
        </div>
        <div class="form-group">
            <label for="password">Password: </label>
            <input class="form-control" id="password" placeholder="Password" type="password" name="password">
        </div>
        <div class="form-group">
            <label for="re-password">re-Password: </label>
            <input class="form-control" id="re-password" placeholder="re-Password" type="password" name="repassword">
        </div>
        <div class="form-group">
            <label for="fullname">Fullname</label>
            <input class="form-control" id="fullname" placeholder="Name" type="text" name="fullname">
        </div>
        <div class="form-group">
            <label for="email">Email: </label>
            <input class="form-control" id="email" placeholder="email" type="email" name="email">
            <small class="form-text text-muted">We never share your email! :-)</small>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
</div>


<% include partials/footer.ejs %>